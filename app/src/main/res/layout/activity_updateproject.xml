<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Updateproject">


    <EditText
        android:id="@+id/up_title"
        android:layout_width="348dp"
        android:layout_height="55dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/rectangle_shape"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  Title: "
        android:textSize="@dimen/form_field_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/up_description"
        android:layout_width="348dp"
        android:layout_height="55dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/rectangle_shape"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  Description: "
        android:textSize="@dimen/form_field_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_title" />

    <EditText
        android:id="@+id/up_duration"
        android:layout_width="348dp"
        android:layout_height="55dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/rectangle_shape"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  Duration: "
        android:textSize="@dimen/form_field_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_projectgoal" />


    <EditText
        android:id="@+id/up_projectgoal"
        android:layout_width="348dp"
        android:layout_height="55dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/rectangle_shape"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  Project Goal: "
        android:textSize="@dimen/form_field_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_description" />

    <EditText
        android:id="@+id/up_status"
        android:layout_width="348dp"
        android:layout_height="55dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/rectangle_shape"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  Status: "
        android:textSize="@dimen/form_field_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_duration" />

    <EditText
        android:id="@+id/up_organizer"
        android:layout_width="348dp"
        android:layout_height="55dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/rectangle_shape"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  Organizer: "
        android:textSize="@dimen/form_field_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_status" />

    <EditText
        android:id="@+id/up_category"
        android:layout_width="348dp"
        android:layout_height="55dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/rectangle_shape"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  Project Category: "
        android:textSize="@dimen/form_field_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_organizer" />

    <EditText
        android:id="@+id/up_addbeneficiaries"
        android:layout_width="348dp"
        android:layout_height="55dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/rectangle_shape"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  Add Beneficiaries: "
        android:textSize="@dimen/form_field_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_category" />

    <Button
        android:id="@+id/up_pro_savebutton"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="234dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="47dp"
        android:background="@color/darkblue"
        android:text="@string/update_button"
        android:textColor="@color/white"
        android:textSize="@dimen/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_addbeneficiaries" />

</androidx.constraintlayout.widget.ConstraintLayout>